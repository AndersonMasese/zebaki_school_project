<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    tools:context="com.zpanel.anderson.zebaki.RegisterActivity">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="#f7f6f6"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@null"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:id="@+id/editText5"

                android:hint="Name " />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card2"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="#ecebeb"
                android:layout_below="@+id/card1"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >





            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:background="@null"

                android:layout_marginTop="3dp"
                android:id="@+id/editText6"
                android:hint="Phone" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card3"
                android:layout_height="wrap_content"


                card_view:cardBackgroundColor="#f7f6f6"
                android:layout_below="@+id/card2"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@null"


                android:layout_marginTop="3dp"
                android:id="@+id/editText7"
                android:hint="Email Address" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card4"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="#ecebeb"
                android:layout_below="@+id/card3"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@null"

                android:layout_marginTop="3dp"
                android:id="@+id/editText8"
                android:hint="Choose Password" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card5"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="#f7f6f6"
                android:layout_below="@+id/card4"

                card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
                card_view:cardCornerRadius="4dp"
                android:layout_centerHorizontal="true" >

            <Button
                android:text="REGISTER"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText8"
                android:layout_marginTop="100dp"
                android:id="@+id/button2"
                android:textColor="#ffffff"
                android:background="#039b0a"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


    </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
