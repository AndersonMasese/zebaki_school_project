<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_help"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zpanel.anderson.zebaki.Help">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"
        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="About Zebaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2" />
            <TextView
                android:text="Zebaki, Where Pros meet clients, and you get paid for making them meet!There are two registration options.Agent registration and business registration.Using the email option to the left pane, registered businesses can optionally access their online zebaki account and interact with clients being sold to them.Businesses can also optionally confirm received clients although this can be done by zebaki.For agent users, one needs to register and use these credentials to log into zebaki for account access or become agents fo registered businesses inorder to be paid.Payment claims can be made on the left panel by emailing  zebaki.Copy paste the emailaddress of the registered businesses.
                Zebaki will pay you the indicated value less service fee on each successful sales marketing made."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:id="@+id/textView3" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"

        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"

        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="Registration and Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/ambassador" />
            <TextView
                android:text="Use one of the relevant icons on the maps tab to register."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ambassador"
                android:id="@+id/ambassador1" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        card_view:cardCornerRadius="4dp"


        android:layout_centerHorizontal="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:text="Maps "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/me" />
            <TextView
                android:text="Navigate through to get quick overview of what zebaki does"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me"
                android:id="@+id/me1" />


        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@+id/card2"

            android:layout_centerHorizontal="true" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:text="Others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reg" />
                <TextView
                    android:text="Zebaki is pretty intuitive. Swipe left center rigth,click here and there and you'l be at home with the working of the software"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reg"
                    android:id="@+id/reg1" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
</LinearLayout>



</ScrollView>

