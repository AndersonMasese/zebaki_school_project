<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.zpanel.anderson.zebaki.Professionals"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/pro"
            android:text="Select Business/Institution."/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/highscool"
                android:text="High Schools"
                android:backgroundTint="@android:color/white"

                android:textColor="#6f24f1"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Universities"
                android:backgroundTint="#372ee2"
                android:paddingTop="10dp"
                android:id="@+id/universities"
                android:textColor="#039b0a"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Law Firms"
                android:backgroundTint="#acefe6"
                android:id="@+id/lawfirms"
                android:textColor="#039b0a"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Business People"
                android:backgroundTint="@android:color/white"
                android:id="@+id/businesspeople"
                android:textColor="#039b0a"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Doctors"
                android:backgroundTint="#b71326"
                android:id="@+id/doctors"
                android:textColor="#5271d7"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Nurses"
                android:backgroundTint="#4e0405"
                android:id="@+id/nurses"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Primary School Teachers"
                android:paddingTop="10dp"
                android:backgroundTint="@android:color/white"
                android:id="@+id/primaryschoolteachers"
                android:textColor="#9b0336"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:backgroundTint="#6cf296"
                android:text="High School Teachers"
                android:id="@+id/highschoolteachers"
                android:textColor="#e7eae7"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Music Teachers"
                android:id="@+id/musicteachers"
                android:backgroundTint="@android:color/white"
                android:textColor="#675ee7"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Lawyers"
                android:backgroundTint="@android:color/white"
                android:id="@+id/lawyers"
                android:textColor="#af3ad6"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Software Developers"
                android:backgroundTint="@android:color/white"
                android:id="@+id/softwareDevelopers"
                android:textColor="#ff0f13"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Hotel and Accommodation"
                android:id="@+id/hotelAccommodation"
                android:textColor="#6fdad1"
                android:backgroundTint="#e90d1b"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Beauticians"
                android:backgroundTint="@android:color/white"
                android:id="@+id/beauticians"
                android:textColor="#039b0a"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/white"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="Travel and Transport"
                android:id="@+id/travelTransport"
                android:textColor="#4f72e7"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:backgroundTint="@android:color/white"
                android:text="Retailers and Shopping Malls"
                android:id="@+id/retailers"
                android:textColor="#039b0a"
                android:layout_weight="1"/>


            />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
